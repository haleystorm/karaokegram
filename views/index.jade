extends layout

block content
    p 1. Find your song
    #searchYouTube
        fieldset
            input#inputSearch(type='text', placeholder='Search...')
            button#btnDoSearch Search
    #resultList
        ul
    
    iframe#frameYouTube(width='420', height='315', scrolling='no', frameborder='no', src='https://www.youtube.com/embed/pXLZFaPkHlw')
    p 2. Press Record (time it right!)
    img#camera-placeholder(width='420', src="images/camera-video.png", alt="camera-video")
    p 3. Share
    #sendVideo
        fieldset
            input#inputUserName(type='text', placeholder='Your Name')
            input#inputUserEmail(type='text', placeholder='Your Email')
            br
            input#inputFriendName(type='text', placeholder="Friend's Name")
            input#inputFriendEmail(type='text', placeholder="Friend's Email")
            br
            button#btnSubmit Send Video
